<!-- views/partials/loginModal.ejs -->
<div id="login-modal" class="modal hidden">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <button type="button" class="modal-close" aria-label="Close">&times;</button>

    <!-- Tabs -->
    <div class="modal-header">
      <button type="button" class="tab active" data-tab="organization">Organization</button>
      <button type="button" class="tab" data-tab="admin">Admin</button>
    </div>

    <!-- Body: Step 1 = phone input; Step 2 = OTP input -->
    <div class="modal-body">
      <!-- STEP 1: enter phone -->
      <div class="step" id="step-phone">
        <label for="login-phone">Phone number</label>
        <input type="text" id="login-phone" placeholder="+1555…" />
        <div class="error-message" style="color: red; margin-top: 8px;"></div>
        <button id="send-otp-btn" class="btn btn-primary" style="margin-top: 12px;">
          Send OTP
        </button>
      </div>

      <!-- STEP 2: enter OTP -->
      <div class="step hidden" id="step-otp">
        <p>We’ve sent an OTP to <span id="display-phone"></span></p>
        <label for="otp-code">Enter code</label>
        <input type="text" id="otp-code" maxlength="6" />
        <div class="status-message" style="margin-top: 8px;"></div>
        <button id="verify-otp-btn" class="btn btn-primary" style="margin-top: 12px;">
          Verify OTP
        </button>
      </div>
    </div>
  </div>
</div>
