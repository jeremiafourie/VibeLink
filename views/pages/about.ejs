
<%- include('../partials/header') %>
<div class ="container">
    <section class="about-section">
        <h1>About Us</h1>
        <p class="about-intro">Get to know the VibeLink dream team!</p>
      
        <ul class="team-list">
          <% team.forEach(member => { %>
            <li class="team-member-card">
              <div class="member-info">
                <strong><%= member.name %></strong>
                <span><%= member.role %></span>
              </div>
            </li>
          <% }) %>
        </ul>
    </section>
     <!-- Additional Information: Mission, Vision, and Core Values -->
    <section class="about-extras">
     <div class="goal-card">
       <h2>Our Mission</h2>
       <p>To create cutting-edge digital solutions that connect people, spark creativity, and build the future.</p>
     </div>
     <div class="goal-card">
       <h2>Our Vision</h2>
       <p>Becoming the go-to platform for modern connectivity and collaborative innovation across the globe.</p>
    </div>
    <div class="goal-card">
      <h2>Core Values</h2>
      <ul>
        <li>Innovation First</li>
        <li>Real Connections</li>
        <li>Diversity + Inclusion</li>
        <li>Passion in Everything</li>
      </ul>
    </div>
  </section>
</div>


<%- include('../partials/footer') %>

