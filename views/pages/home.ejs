<%- include('../partials/header') %>

<section class="hero home-hero">
  <video autoplay muted loop playsinline class="hero-bg-video">
    <source src="/videos/bg.mp4" type="video/mp4">
  </video>
  <div class="container">
      <div class="hero-content">
          <h1>Welcome to our Community</h1>
          <p>Where people with the same vibe can get together</p>
          <div class="hero-buttons">
              <a href="/events" class="btn btn-primary">Explore Events</a>
              <a href="/about" class="btn btn-secondary-main">Learn More</a>
          </div>
      </div>
  </div>
</section>

<section class="upcoming-events">
  <div class="container">
      <div class="section-header">
          <h2>Upcoming Events</h2>
          <p>Join us at these upcoming community gatherings</p>
      </div>
      
      <div class="events-grid">
        <% if (upcomingEvents.length > 0) { %>
          <!-- Sort by the event that is the next upcoming event -->
         <% upcomingEvents.sort((a, b) => new Date(a.date) - new Date(b.date)); %> 
          <% upcomingEvents.forEach(event => { %>
            <div class="event-card">
              <div class="event-image">
                <img src="<%= event.image %>" alt="<%= event.title %>">
              </div>
              <div class="event-details">
                <h3><%= event.title %></h3>
                <div class="event-meta">
                  <p> <%= event.date %></p>
                  <p> <%= event.location %></p>
                </div>
                <p class="event-description"><%= event.description %></p>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p class="no-events">No upcoming events at this time. Check back soon!</p>
        <% } %>
      </div>
      
      <div class="view-all">
          <a href="/events" class="btn btn-primary">View All Events</a>
      </div>
  </div>
</section>

<section class="Join-community">
  <div class="container">
      <div class="Join-community-content">
          <h2>Join Our Community Today</h2>
          <p>Be part of the VibeLink community and make lasting connections :)</p>
          <a href="/contact" class="btn btn-primary">Get Involved</a>
      </div>
  </div>
</section>

<%- include('../partials/footer') %>
